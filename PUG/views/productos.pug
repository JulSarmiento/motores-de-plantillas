extends layouts/index.pug

block productos 

  style 
    .table td
      vertical-align: middle
    
    .table th 
      vertical-align: middle
    
    .table--mod
      box-shadow: 0px 4px 25px 1px #DFC7C4
    
    h1 
      text-decoration: overline
      color: rgb(223, 127, 120)
      font-size: 30px
      margin-bottom: 20px

    td 
      margin-left: 10px

    tr 
      background-color: #ddd
    
    .jumbotron 
      min-height: 100vh
      margin: 10px  auto
      background-color: #ffffff
    
    a
      background-color: rgb(223, 127, 120) 
      color: #efefefe
    
  section(class="jumbotron")

    h1= 'Vista de Productos'

    if products.length > 0

      div(class="table-responsive")
        table(class="table table-dark gap-5 table--mod")

          tr
            th='Nombre'
            th='Precio'
            th='foto'

          each product in products 

            tr 
              td=product.productName
              td=new Intl.NumberFormat('en-US', {style: 'currency', currency: 'USD'}).format(product.productPrice )   
              td
                img(width="50" src=product.thumbnail alt="not found")

    else 
      h3(class="alert alert-warning")='No se encontraron productos'

    a(href="/" type="button" class="btn btn-primary ")='Cargar un nuevo producto'

