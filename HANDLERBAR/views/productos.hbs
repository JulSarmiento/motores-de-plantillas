<style>
  .table td, .table th {
    vertical-align: middle;
  }

  .table--mod{
    box-shadow: 0px 4px 25px 1px #DFC7C4;
  }

  h1 {
    text-decoration: overline;
    color: rgb(223, 127, 120);  
    font-size: 30px;
    margin-bottom: 20px;

  }

  hr {
    background-color: #ddd;
  }

  .jumbotron {
    min-height: 100vh;
    margin: 5% 10%;
    background-color: #ffffff;
  }

  a{
    background-color: rgb(223, 127, 120) ;
    color: #efefefe;
  }

</style>

<section class="jumbotron">
  <header>
    <h1>Vista de Productos</h1>
  </header>

  {{#if (hasItems products) }}
    <div class="table-responsive">
      <table class="table table-dark table--mod">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
        {{#each products}}
        <tr>
          <td>{{this.productName}}</td>
          <td>{{ moneyFormat this.productPrice }} COP</td>
          <td><img width="50" src="{{ picture this.thumbnail }}" alt="{{this.productName}}" title="{{this.productName}}"></td>
        </tr>
        {{/each}}
      </table>
    </div>
  {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
  {{/if}}
  <br>
  <a href="/" type="button" class="btn btn-primary ">Cargar un nuevo producto</a>
</section>
